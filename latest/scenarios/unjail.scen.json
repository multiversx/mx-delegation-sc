        {
            "step": "checkState",
            "comment": "check that stake was sent",
            "accounts": {
                "sc:auction": {
                    "nonce": "0",
                    "balance": "300,000,000,000,000",
                    "storage": "*",
                    "code": "file:../../auction-mock/output/auction-mock.wasm"
                },
                "+": ""
