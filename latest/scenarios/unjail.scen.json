{
    "name": "unjail nodes scenario",
    "gasSchedule": "v3",
    "steps": [
        {
            "step": "externalSteps",
            "path": "steps/init_accounts.steps.json"
        },
        {
            "step": "externalSteps",
            "path": "steps/deploy.steps.json"
        },
        {
            "step": "externalSteps",
