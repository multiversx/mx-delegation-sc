{
    "name": "unstake-5",
    "comment": "check that unstake from waiting list takes funds in reverse order",
    "gasSchedule": "v3",
    "steps": [
        {
            "step": "externalSteps",
            "path": "steps/init_accounts.steps.json"
        },
        {
            "step": "externalSteps",
            "path": "steps/deploy.steps.json"
        },
        {
            "step": "externalSteps",
            "path": "steps/add_nodes.steps.json"
        },
        {
            "step": "externalSteps",
            "path": "steps/stake_1.steps.json"
        },
        {
            "step": "externalSteps",
            "path": "steps/increase_cap.steps.json"
        },
        {
            "step": "externalSteps",
            "path": "steps/unstake.steps.json"
        },
        {
            "step": "transfer",
            "id": "supply delegator 3",
            "tx": {
                "from": "address:endless_sack_of_erd",
                "to": "address:delegator3",
                "egldValue": "500,000,000,000,000"
            }
        },
        {
            "step": "setState",
            "comment": "time of stake 1",
            "currentBlockInfo": {
                "blockNonce": "501"
            }
        },
        {
            "step": "scCall",
            "id": "delegator 3 stake 1",
            "tx": {
                "from": "address:delegator3",
                "to": "sc:delegation",
                "egldValue": "200,000,000,000,000",
                "function": "stake",
                "arguments": [],
                "gasLimit": "100,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": [],
                "status": "",
                "logs": [
                    {
                        "address": "sc:delegation",
                        "endpoint": "str:stake",
                        "topics": [
                            "str:userStake",
                            "address:delegator3"
                        ],
                        "data": [
                            "200,000,000,000,000"
                        ]
                    }
                ],
                "gas": "*",
                "refund": "*"
            }
        },
        {
            "step": "setState",
            "comment": "time of stake 2",
            "currentBlockInfo": {
                "blockNonce": "502"
            }
        },
        {
            "step": "scCall",
            "id": "delegator 3 stake 2",
            "tx": {
                "from": "address:delegator3",
                "to": "sc:delegation",
                "egldValue": "300,000,000,000,000",
                "function": "stake",
                "arguments": [],
                "gasLimit": "100,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": [],
                "status": "",
                "logs": [
                    {
                        "address": "sc:delegation",
                        "endpoint": "str:stake",
                        "topics": [
                            "str:userStake",
                            "address:delegator3"
                        ],
                        "data": [
                            "300,000,000,000,000"
                        ]
                    }
                ],
                "gas": "*",
                "refund": "*"
            }
        },
        {
            "step": "scCall",
            "id": "getFullWaitingList-before-unstake",
            "tx": {
                "from": "address:node_address",
                "to": "sc:delegation",
                "function": "getFullWaitingList",
                "arguments": [],
                "gasLimit": "100,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": [
                    "address:delegator3",
                    "150,000,000,000,000",
                    "501",
                    "address:delegator3",
                    "300,000,000,000,000",
                    "502"
                ],
                "status": "",
                "logs": "*",
                "gas": "*",
                "refund": "*"
            }
        },
        {
            "step": "scCall",
            "id": "user-unstake",
            "tx": {
                "from": "address:delegator3",
                "to": "sc:delegation",
                "function": "unStake",
                "arguments": [
                    "10,000,000,000,000"
                ],
                "gasLimit": "100,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": [],
                "status": "",
                "logs": "*",
                "gas": "*",
                "refund": "*"
            }
        },
        {
            "step": "scCall",
            "id": "getFullWaitingList-after-unstake",
            "tx": {
                "from": "address:node_address",
                "to": "sc:delegation",
                "function": "getFullWaitingList",
                "arguments": [],
                "gasLimit": "100,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": [
                    "address:delegator3",
                    "150,000,000,000,000",
                    "501",
                    "address:delegator3",
                    "290,000,000,000,000",
                    "502"
                ],
                "status": "",
                "logs": "*",
                "gas": "*",
                "refund": "*"
            }
        }
    ]
}
