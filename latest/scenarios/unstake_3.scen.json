{
    "name": "unstake-3",
    "comment": "unstake more than it is delegated",
    "gasSchedule": "v3",
    "steps": [
        {
            "step": "externalSteps",
            "path": "steps/init_accounts.steps.json"
        },
        {
            "step": "externalSteps",
            "path": "steps/deploy.steps.json"
        },
        {
            "step": "externalSteps",
            "path": "steps/add_nodes.steps.json"
        },
        {
            "step": "externalSteps",
            "path": "steps/stake_1.steps.json"
        },
        {
            "step": "externalSteps",
            "path": "steps/increase_cap.steps.json"
        },
        {
            "step": "scCall",
            "id": "user-unstake",
            "tx": {
                "from": "address:delegator1",
                "to": "sc:delegation",
                "function": "unStake",
                "arguments": [
                    "200,001,000,000,000"
                ],
                "gasLimit": "100,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": [],
                "status": "4",
                "message": "str:cannot unstake more than the user waiting + active stake",
                "logs": "*",
                "gas": "*",
                "refund": "*"
            }
        },
        {
            "step": "scCall",
            "id": "check-stake-by-type-1",
            "tx": {
                "from": "address:someone",
                "to": "sc:delegation",
                "function": "getUserStakeByType",
                "arguments": [
                    "address:delegator1"
                ],
                "gasLimit": "100,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": [
                    "0",
                    "0",
                    "100,001,000,000,000",
                    "0",
                    "0"
                ],
                "status": "",
                "logs": [],
                "gas": "*",
                "refund": "*"
            }
        },
        {
            "step": "scCall",
            "id": "check-stake-by-type-2",
            "tx": {
                "from": "address:someone",
                "to": "sc:delegation",
                "function": "getUserStakeByType",
                "arguments": [
                    "address:delegator2"
                ],
                "gasLimit": "100,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": [
                    "0",
                    "1,000,000,000",
                    "199,999,000,000,000",
                    "0",
                    "0"
                ],
                "status": "",
                "logs": [],
                "gas": "*",
                "refund": "*"
            }
        },
        {
            "step": "scCall",
            "id": "check-stake-by-type-total",
            "tx": {
                "from": "address:someone",
                "to": "sc:delegation",
                "function": "getTotalStakeByType",
                "arguments": [],
                "gasLimit": "100,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": [
                    "0",
                    "1,000,000,000",
                    "300,000,000,000,000",
                    "0",
                    "0"
                ],
                "status": "",
                "logs": [],
                "gas": "*",
                "refund": "*"
            }
        }
    ]
}
